<form class="form-horizontal" action='/huds/<%= hud._id %>' method='post'>
  <fieldset>
    <legend>Update HUD</legend>

    <%- form.toHTML() %>

    <div class="control-group">
      <label class="control-label"></label>
      <div class="controls">
        <button id="submit" name="submit" class="btn btn-default">Update HUD</button>
      </div>
    </div>

    <input type="hidden" name="_method" value="put"/>
  </fieldset>
</form>
